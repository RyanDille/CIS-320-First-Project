<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>NameListGet</servlet-name>
        <servlet-class>edu.simpson.dille.NameListGet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>NameListGet</servlet-name>
        <url-pattern>/api/name_list_get</url-pattern>
    </servlet-mapping>

    <servlet>
    <servlet-name>FormTestServlet</servlet-name>
    <servlet-class>edu.simpson.dille.FormTestServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FormTestServlet</servlet-name>
        <url-pattern>/api/form_test_servlet</url-pattern>
    </servlet-mapping>




    <servlet>
        <servlet-name>NameListEdit</servlet-name>
        <servlet-class>edu.simpson.dille.NameListEdit</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>NameListEdit</servlet-name>
        <url-pattern>/api/name_list_edit</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>NameListDelete</servlet-name>
        <servlet-class>edu.simpson.dille.NameListDelete</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>NameListDelete</servlet-name>
        <url-pattern>/api/name_list_delete</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>FormTestJSONServlet</servlet-name>
        <servlet-class>edu.simpson.dille.FormTestJSONServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FormTestJSONServlet</servlet-name>
        <url-pattern>/api/form_test_json_servlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FormTestFileServlet</servlet-name>
        <servlet-class>edu.simpson.dille.FormTestFileServlet</servlet-class>
        <multipart-config>
            <max-file-size>50000</max-file-size>
            <max-request-size>50000</max-request-size>
            <file-size-threshold>0</file-size-threshold>
        </multipart-config>
    </servlet>

    <servlet-mapping>
        <servlet-name>FormTestFileServlet</servlet-name>
        <url-pattern>/api/form_test_file_servlet</url-pattern>
    </servlet-mapping>

</web-app>



